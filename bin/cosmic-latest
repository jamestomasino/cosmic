#!/bin/sh

if [ ! -z "$1" ]; then
  head -n "$1" "/var/gopher/listing.gophermap" | sed "s|\\t.*||" | sed "s|^0||" | awk -F" - " '{f=$2; gsub(".txt", ".html", f); printf ">>> %s - %s\n", $1, f}'
else
  head "/var/gopher/listing.gophermap" | sed "s|\\t.*||" | sed "s|^0||" | awk -F" - " '{f=$2; gsub(".txt", ".html", f); printf ">>> %s - %s\n", $1, f}'
fi
